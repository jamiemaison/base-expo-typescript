{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "outDir": "./dist/",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ""
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}